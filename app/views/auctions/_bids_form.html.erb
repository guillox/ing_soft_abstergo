<% if current_user %>
  
  <% if @auction.user == current_user %>

    <h3>Razones de oferta</h3>

    <% @auction.bids.each do |bid| %>
      <div class="span2 well">
          <p><strong><%= bid.user.username %></strong> <%= bid.created_at.to_formatted_s(:db) %></p>
          <%= bid.reason %>
      </div>
    <% end %>

  <% elsif @auction.bids.exists?(user_id: current_user.id) %>
    <h3>RazÃ³n de mi oferta</h3>

    <%= @auction.bids.where(user_id: current_user.id).pluck(:reason).first %>

  <% else %>

    <% if !Bid.exists?(user_id: current_user.id, auction_id: @auction.id) %>
      <h3>Publica tu oferta:</h3>

      <%= form_for([@auction, @auction.bids.build]) do |f| %>
        <div class="form-group">
          <%= f.text_area :reason, class: "form-control" %>
        </div>

        <%= f.submit "Ofertar" %>
      <% end %>
    <% end %>

  <% end %>
<% end %>
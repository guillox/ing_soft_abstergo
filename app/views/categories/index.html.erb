<h1>Categorias</h1>

<div class="btn-group" data-toggle="buttons-radio">
	<button type="button" class="btn btn-primary active">Ver todas</button>
	<button type="button" class="btn btn-primary">Crear</button>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th class="col-sm-10">Nombre</th>
			<th class="col-sm-2">Acción</th>
		</tr>
	</thead>

	<tbody>
		<% categoria = Category.all %>
		<% categoria.each do |categoria| %>
			<tr>
				<td><%= categoria.nombre %></td>
				<td>
					<%= link_to "Editar", edit_category_path(categoria), class: 'btn btn-info btn-xs' %>
				  <%= link_to "Eliminar", categoria, method: :delete, data:{confirm:'¿Estás seguro?'}, class: 'btn btn-danger btn-xs' %>
				</td>
			</tr>
		<% end %>  
	</tbody>
</table>

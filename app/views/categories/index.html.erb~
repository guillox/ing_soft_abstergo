<table class="table table-striped">
	<thead>
		<tr>
			<th class="col-sm-7">Nombre</th>
			<th class="col-sm-5">Acción</th>
			
		</tr>
	</thead>

	<tbody>
		<% @category.each do |category| %>
			<tr>
				<td><%= category.name %></td>
				<td>
						<%= link_to "Ver", category_path(category), class: 'btn btn-warning' %>
					<% if current_user %>
						<% if current_user.admin? %>
							<%= link_to "Editar", edit_category_path(category), class: 'btn btn-primary' %>					
						  
							<% if category.active %>
								<%= link_to "Desactivar", category, method: :delete, data:{confirm:"¿Está seguro que desea borrar la categoria seleccionada?"}, class: 'btn btn-danger' %>
							<% else %>
								<%= link_to "Activar", category, method: :delete, class: 'btn btn-success' %>
							<% end %>
						<% end %>
					<% end %>

				</td>
			</tr>
		<% end %>  
	</tbody>
</table>
